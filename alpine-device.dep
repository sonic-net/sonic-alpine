# Dependency file for Alpine device specific files
$(ALPINE_DEVICE)_SRC_PATH := platform/alpinevs/src/sonic-platform-alpinevs/alpinevs-device
DEP_FILES   := $(SONIC_COMMON_FILES_LIST) platform/alpinevs/alpine-device.mk platform/alpinevs/alpine-device.dep
DEP_FILES   += $(SONIC_COMMON_BASE_FILES_LIST)

# This line ensures that ANY file change in your source folder triggers a rebuild
$(ALPINE_DEVICE)_SMDEP_FILES = $(addprefix $($(ALPINE_DEVICE)_SRC_PATH)/,$(shell cd $($(ALPINE_DEVICE)_SRC_PATH) && git ls-files))

$(ALPINE_DEVICE)_CACHE_MODE  := GIT_CONTENT_SHA
$(ALPINE_DEVICE)_DEP_FLAGS   := $(SONIC_COMMON_FLAGS_LIST)
$(ALPINE_DEVICE)_DEP_FILES   := $(DEP_FILES)
$(ALPINE_DEVICE)_SMDEP_PATHS := $($(ALPINE_DEVICE)_SRC_PATH)
