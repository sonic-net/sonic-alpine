# Dependency file for Alpine platform config services
$(ALPINE_CONFIG)_SRC_PATH := platform/alpinevs/src/services/config
DEP_FILES   := $(SONIC_COMMON_FILES_LIST) platform/alpinevs/alpine-config.mk platform/alpinevs/alpine-config.dep
DEP_FILES   += $(SONIC_COMMON_BASE_FILES_LIST)

# This line ensures that ANY file change in your source folder triggers a rebuild
$(ALPINE_CONFIG)_SMDEP_FILES = $(addprefix $($(ALPINE_CONFIG)_SRC_PATH)/,$(shell cd $($(ALPINE_CONFIG)_SRC_PATH) && git ls-files))

$(ALPINE_CONFIG)_CACHE_MODE  := GIT_CONTENT_SHA
$(ALPINE_CONFIG)_DEP_FLAGS   := $(SONIC_COMMON_FLAGS_LIST)
$(ALPINE_CONFIG)_DEP_FILES   := $(DEP_FILES)
$(ALPINE_CONFIG)_SMDEP_PATHS := $($(ALPINE_CONFIG)_SRC_PATH)
