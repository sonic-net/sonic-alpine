# Dependency file for Alpine platform init services
$(ALPINE_INIT)_SRC_PATH := platform/alpinevs/src/services/init
DEP_FILES   := $(SONIC_COMMON_FILES_LIST) platform/alpinevs/alpine-init.mk platform/alpinevs/alpine-init.dep
DEP_FILES   += $(SONIC_COMMON_BASE_FILES_LIST)

# This line ensures that ANY file change in your source folder triggers a rebuild
$(ALPINE_INIT)_SMDEP_FILES = $(addprefix $($(ALPINE_INIT)_SRC_PATH)/,$(shell cd $($(ALPINE_INIT)_SRC_PATH) && git ls-files))

$(ALPINE_INIT)_CACHE_MODE  := GIT_CONTENT_SHA
$(ALPINE_INIT)_DEP_FLAGS   := $(SONIC_COMMON_FLAGS_LIST)
$(ALPINE_INIT)_DEP_FILES   := $(DEP_FILES)
$(ALPINE_INIT)_SMDEP_PATHS := $($(ALPINE_INIT)_SRC_PATH)
